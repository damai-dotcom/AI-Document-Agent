# LLM API configuration (for Q&A only)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Optional: Support other LLMs
LLM_TYPE=openai
# LLM_TYPE=claude
# LLM_TYPE=kimi

# Local storage configuration
CHROMA_DB_PATH=./chroma_db

